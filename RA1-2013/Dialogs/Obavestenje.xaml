<Window x:Class="RA1_2013.Dialogs.Obavestenje"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RA1_2013.Dialogs"
        mc:Ignorable="d"
        Title="Obaveštenje" Height="150" Width="280" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="White" Margin="10,10,10,0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
                
            <TextBlock Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10" TextWrapping="Wrap" x:Name="Message">Izvršeno je brisanje elementa sa oznakom:</TextBlock>
            <TextBlock Grid.Row="1" x:Name="text" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="3" TextWrapping="Wrap" FontWeight="Bold"></TextBlock>
        </Grid>
        
        <Button Grid.Row="1" Click="Button_Click" Width="40" Margin="2" x:Name="OK">OK</Button>
    </Grid>
</Window>
